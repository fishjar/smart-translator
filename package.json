{
  "name": "koa-rest-boilerplate",
  "version": "1.0.0",
  "description": "KOA REST boilerplate",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./dist/server.js",
    "dev": "cross-env NODE_ENV=development DEBUG=koa* nodemon --inspect=0.0.0.0:9229 ./src/server.js",
    "build": "cross-env rimraf dist && NODE_ENV=production babel src -d dist -s",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "gabe",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "abort-controller": "^3.0.0",
    "cheerio": "^1.0.0-rc.3",
    "cross-env": "^5.2.0",
    "fetch-cookie": "^0.11.0",
    "form-data": "^3.0.0",
    "koa": "^2.6.1",
    "koa-body": "^4.0.6",
    "koa-compress": "^3.0.0",
    "koa-logger": "^3.2.0",
    "koa-qs": "^2.0.0",
    "koa-router": "^7.4.0",
    "node-fetch": "^2.6.1",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.5.0",
    "nodemon": "^1.18.6",
    "rimraf": "^2.6.2"
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "transform-runtime",
      "transform-object-rest-spread"
    ],
    "presets": [
      "env"
    ],
    "env": {
      "production": {
        "presets": [
          "minify"
        ]
      }
    }
  }
}
